#include<iostream>
using namespace std;

 int main(){
 int arr[]={1,2,3,4};
 cout<<arr[0]<<endl;
 cout<<arr[1]<<endl;
 cout<<arr[2]<<endl;
 cout<<arr[3]<<endl;
//  sizeof() ==> used to find the size
 int size=sizeof(arr)/sizeof(arr[0]);


 cout<<"size of the array is the "<<size<<endl;


 //new array
 int arr1[4];
 cout<<arr1[0]<<endl;
 cout<<arr1[1]<<endl;
 cout<<arr1[2]<<endl;
 cout<<arr1[3]<<endl;
 // if we don't iniliaze array then it will throw garbage value
 

    return 0;
 }